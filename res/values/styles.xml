<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="left_column">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">fill</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingTop">7dp</item>
        <item name="android:paddingBottom">7dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="right_column">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">fill</item>
        <item name="android:gravity">right|center_vertical</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:paddingTop">7dp</item>
        <item name="android:paddingBottom">7dp</item>
    </style>

    <style name="filter_pokemon_title">
        <item name="android:background">@drawable/red_filter_title</item>
        <item name="android:clickable">true</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:layout_height">25dp</item>
    </style>

    <style name="filter_pokemon">
        <item name="android:button">@null</item>
        <item name="android:textSize">14sp</item>
        <item name="android:background">@drawable/red_check_box</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:drawablePadding">5dp</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="filter_pokemon_type" parent="filter_pokemon">
        <item name="android:textSize">12sp</item>
        <item name="android:layout_margin">3dp</item>
    </style>

    <style name="filter_pokemon_other" parent="filter_pokemon">
        <item name="android:background">@drawable/red_white_check_box</item>
        <item name="android:layout_height">35dp</item>
    </style>
</resources>